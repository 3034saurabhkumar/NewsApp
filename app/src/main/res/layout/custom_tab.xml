<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_tab_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sources" />

    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/category_business"
        app:layout_constraintEnd_toEndOf="@id/iv_tab_icon"
        app:layout_constraintStart_toStartOf="@id/iv_tab_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_tab_icon" />
</android.support.constraint.ConstraintLayout>