<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <!--<item name="android:fontFamily">@font/roboto_slab_regular</item>-->
    </style>

    <style name="AppTheme.Headlines.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="AppTheme.Headline.Title" parent="TextAppearance.AppCompat.Title">

    </style>

    <style name="AppTheme.OptionsBottomSheetText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/options_bottom_sheet_medium</item>
        <item name="android:paddingEnd">@dimen/options_bottom_sheet_medium</item>
        <item name="android:textColor">@color/option_item_tint_color</item>
        <item name="android:textSize">@dimen/options_bottom_sheet_text</item>
    </style>

    <style name="AppTheme.OptionsBottomSheetImage">
        <item name="android:layout_width">@dimen/options_bottom_sheet_icon</item>
        <item name="android:layout_height">@dimen/options_bottom_sheet_icon</item>
        <item name="android:paddingTop">@dimen/options_bottom_sheet_small</item>
        <item name="android:paddingBottom">@dimen/options_bottom_sheet_small</item>
    </style>
</resources>
